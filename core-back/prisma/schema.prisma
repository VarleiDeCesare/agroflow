generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid()) @db.Uuid
  name       String?
  surname    String?
  email      String   @unique
  password   String?
  cpf        String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  lavoura Lavoura[]
  @@map("users")
}
model Lavoura {
  id         String   @id @default(uuid())
  titulo String
  descricao String?
  qnt_hectares Float?
  localidade String?
  user_id String @db.Uuid
  user User @relation(fields: [user_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("lavouras")
}
